{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./node_modules/@types/index.d.ts",
    "./node_modules/**/*.d.ts",
    "./custom_typings/**/*.d.ts",
    "./typings/**/*.d.ts"

  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
